<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"      
        xmlns:app="http://schemas.android.com/apk/res-auto"      
        xmlns:tools="http://schemas.android.com/tools"      
        android:id="@+id/container"
        android:layout_width="match_parent"      
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hapticFeedbackEnabled="false">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:id="@+id/type_text"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_spinner"
        app:layout_constraintTop_toBottomOf="@id/type_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/name_text"
        app:layout_constraintTop_toBottomOf="@id/type_spinner"/>
    <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/name_input"
          app:layout_constraintTop_toBottomOf="@id/name_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cardholder_name"
        android:id="@+id/cardholder_text"
        app:layout_constraintTop_toBottomOf="@id/name_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardholder_input"
        app:layout_constraintTop_toBottomOf="@id/cardholder_text"
        android:inputType="text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_number"
        android:id="@+id/cardnumber_text"
        app:layout_constraintTop_toBottomOf="@id/cardholder_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardnumber_input"
        app:layout_constraintTop_toBottomOf="@id/cardnumber_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company"
        android:id="@+id/company_text"
        app:layout_constraintTop_toBottomOf="@id/cardnumber_input"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company_input"
        app:layout_constraintTop_toBottomOf="@id/company_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year_of_expire"
        android:id="@+id/year_text"
        app:layout_constraintTop_toBottomOf="@id/company_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_input"
        app:layout_constraintTop_toBottomOf="@id/year_text"/>
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_of_expire"
        android:id="@+id/month_text"
        app:layout_constraintTop_toBottomOf="@id/year_input"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/month_input"
        app:layout_constraintTop_toBottomOf="@id/month_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:id="@+id/note_text"
        app:layout_constraintTop_toBottomOf="@id/month_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_input"
        app:layout_constraintTop_toBottomOf="@id/note_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:text="@string/add_card"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/note_input"/>
</androidx.constraintlayout.widget.ConstraintLayout>