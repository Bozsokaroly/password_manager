<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"      
        xmlns:app="http://schemas.android.com/apk/res-auto"      
        xmlns:tools="http://schemas.android.com/tools"      
        android:id="@+id/container"
        android:layout_width="match_parent"      
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hapticFeedbackEnabled="false">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text"
        android:text="@string/set_master_password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/master_password_input"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:inputType="textPassword" />
    <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/show_password"
         android:src="@drawable/show"
         app:layout_constrainedWidth="true"
         app:layout_constrainedHeight="true"
         app:layout_constraintHeight_percent="0.1"
         app:layout_constraintWidth_percent="0.1"
         app:layout_constraintTop_toTopOf="@id/master_password_input"
         app:layout_constraintBottom_toBottomOf="@id/master_password_input"
         app:layout_constraintStart_toEndOf="@id/master_password_input"
         app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text"
        app:layout_constraintTop_toBottomOf="@id/master_password_input"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/master_password_button"
        app:layout_constraintTop_toBottomOf="@id/description_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/use_biometrics_unlock"
        android:id="@+id/biometrics_button"
        app:layout_constraintTop_toBottomOf="@id/master_password_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
