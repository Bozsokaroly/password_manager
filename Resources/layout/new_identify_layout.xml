<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hapticFeedbackEnabled="false">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:id="@+id/type_text"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type_spinner"
            app:layout_constraintTop_toBottomOf="@id/type_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:id="@+id/name_text"
            app:layout_constraintTop_toBottomOf="@id/type_spinner"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_input"
            app:layout_constraintTop_toBottomOf="@id/name_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:id="@+id/firstname_text"
            app:layout_constraintTop_toBottomOf="@id/name_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstname_input"
            app:layout_constraintTop_toBottomOf="@id/firstname_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:id="@+id/lastname_text"
            app:layout_constraintTop_toBottomOf="@id/firstname_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastname_input"
            app:layout_constraintTop_toBottomOf="@id/lastname_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:id="@+id/cardnumber_text"
            app:layout_constraintTop_toBottomOf="@id/lastname_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardnumber_input"
            app:layout_constraintTop_toBottomOf="@id/cardnumber_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_of_expire"
            android:id="@+id/year_text"
            app:layout_constraintTop_toBottomOf="@id/cardnumber_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year_input"
            app:layout_constraintTop_toBottomOf="@id/year_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_of_expire"
            android:id="@+id/month_text"
            app:layout_constraintTop_toBottomOf="@id/year_input"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/month_input"
            app:layout_constraintTop_toBottomOf="@id/month_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:id="@+id/address_text"
            app:layout_constraintTop_toBottomOf="@id/month_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_input"
            app:layout_constraintTop_toBottomOf="@id/address_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_info_1"
            android:id="@+id/extraone_text"
            app:layout_constraintTop_toBottomOf="@id/address_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extraone_input"
            app:layout_constraintTop_toBottomOf="@id/extraone_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_info_2"
            android:id="@+id/extratwo_text"
            app:layout_constraintTop_toBottomOf="@id/extraone_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extratwo_input"
            app:layout_constraintTop_toBottomOf="@id/extratwo_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extra_info_3"
            android:id="@+id/extrathree_text"
            app:layout_constraintTop_toBottomOf="@id/extratwo_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extrathree_input"
            app:layout_constraintTop_toBottomOf="@id/extrathree_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:id="@+id/note_text"
            app:layout_constraintTop_toBottomOf="@id/extrathree_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/note_input"
            app:layout_constraintTop_toBottomOf="@id/note_text"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_button"
            android:text="@string/add_identity"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            app:layout_constraintTop_toBottomOf="@id/note_input"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>