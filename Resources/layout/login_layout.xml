<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"      
        xmlns:app="http://schemas.android.com/apk/res-auto"      
        xmlns:tools="http://schemas.android.com/tools"      
        android:id="@+id/container"
        android:layout_width="match_parent"      
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hapticFeedbackEnabled="false">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:id="@+id/background"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="description" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_title"
        android:text="@string/welcome_back"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_text"
        android:text="@string/enter_email_password"
        app:layout_constraintTop_toBottomOf="@id/login_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintTop_toBottomOf="@id/enter_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_text"
            android:text="@string/email"
            app:layout_constraintTop_toBottomOf="@id/enter_text"
            app:layout_constraintStart_toStartOf="@id/email_input"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/email_pic"
            android:src="@drawable/envelope"
            android:background="@drawable/border_right"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_percent="0.1"
            android:contentDescription="description"
            app:layout_constraintTop_toTopOf="@id/email_text"
            app:layout_constraintBottom_toBottomOf="@id/email_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/email_input"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_input"
            app:layout_constraintWidth_percent="0.8"
            android:hint="@string/email_hint"
            android:background="@null"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/email_text"
            app:layout_constraintStart_toEndOf="@id/email_pic"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textEmailAddress" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintTop_toBottomOf="@id/email">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text"
        android:text="@string/password"
        app:layout_constraintStart_toStartOf="@id/password_input"
        app:layout_constraintTop_toBottomOf="@id/email"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/password_pic"
        android:src="@drawable/padlock"
        android:background="@drawable/border_right"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.1"
        android:contentDescription="description"
        app:layout_constraintTop_toTopOf="@id/password_text"
        app:layout_constraintBottom_toBottomOf="@id/password_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/password_input"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_input"
        android:hint="@string/password_hint"
        android:background="@null"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.67"
        app:layout_constraintTop_toBottomOf="@id/password_text"
        app:layout_constraintStart_toEndOf="@id/password_pic"
        app:layout_constraintEnd_toStartOf="@id/show_password"
        android:inputType="textPassword" />
    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/show_password"
    android:src="@drawable/show"
    app:layout_constrainedWidth="true"
    app:layout_constrainedHeight="true"
    app:layout_constraintHeight_percent="0.9"
    app:layout_constraintWidth_percent="0.1"
    app:layout_constraintTop_toTopOf="@id/password_text"
    app:layout_constraintBottom_toBottomOf="@id/password_input"
    app:layout_constraintStart_toEndOf="@id/password_input"
    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:text="@string/login"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_button"
        android:text="@string/register"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/login_button"/>
</androidx.constraintlayout.widget.ConstraintLayout > 